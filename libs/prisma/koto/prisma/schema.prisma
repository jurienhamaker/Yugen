// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/@prisma/koto"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  id                Int         @id @default(autoincrement())
  guildId           String      @unique

  channelId         String?
  
  pingRoleId        String?
  pingOnlyNew       Boolean     @default(true)

  cooldown          Int         @default(10)
  frequency         Int         @default(1)

  games             Game[]

  // timestamps
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Game {
  id                Int         @id @default(autoincrement())
  guildId           String
  lastMessageId     String?
  
  settings          Settings    @relation(fields: [guildId], references: [guildId], onDelete: Cascade, onUpdate: Cascade)

  word              String
  endingAt          DateTime

  guesses           Guess[]

  status            GameStatus  @default(IN_PROGRESS)
  meta              Json        @default("{}")

  // timestamps
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Guess {
  id                Int         @id @default(autoincrement())
  userId            String

  game              Game        @relation(fields: [gameId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  gameId            Int

  points            Int         @default(0)
  meta              Json        @default("{}")

  word              String

  // timestamps
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Player {
  id                Int         @id @default(autoincrement())
  userId            String
  guildId           String
  inGuild           Boolean     @default(true)

  points            Int         @default(0)

  participated      Int         @default(0)
  wins              Int         @default(0)

  // timestamps
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

enum GameStatus {
  IN_PROGRESS
  FAILED
  COMPLETED
  OUT_OF_TIME
}